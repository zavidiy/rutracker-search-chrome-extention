{
  "name": "RuTracker.org Search",
  "short_name": "RTSearch",
  "description": "Searches for the selected text in the RuTracker.org",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon/icon-bitty.png",
    "48": "icon/icon-small.png",
    "128": "icon/icon-large.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://rutracker.org/"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "service_worker": "src/scripts/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/scripts/content.ts"
      ],
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": [
        "https://rutracker.org/forum/tracker.php*"
      ],
      "js": [
        "src/contentScripts/contentScript.ts"
      ]
    }
  ]
}